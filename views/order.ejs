  <body>
    <div class="app-container">
      <aside class="sidebar">
        <a href="/home" class="logo">
          <i class="fas fa-utensils" style="color: var(--primary)"></i>
          <span>Dines<span style="color: var(--primary)">N</span>Dash</span>
        </a>
        <nav>
          <a href="/home" class="nav-item"
            ><i class="fas fa-th-large"></i> Dashboard</a
          >
          <a href="#" class="nav-item"
            ><i class="fas fa-heart"></i> Favorites</a
          >
          <a href="#" class="nav-item active"
            ><i class="fas fa-clock"></i> Orders</a
          >
          <a href="#" class="nav-item"><i class="fas fa-wallet"></i> Wallet</a>
          <a href="#" class="nav-item"><i class="fas fa-cog"></i> Settings</a>
        </nav>
        <div class="user-profile">
          <div class="avatar"><img src="images/avatar.jpg" alt="User" /></div>
          <div>
            <div style="font-weight: 700; font-size: 0.9rem">
              <%= user.fullname %>
            </div>
          </div>
        </div>
      </aside>

      <main class="main-content">
        <div class="page-header">
          <h1>Order History</h1>
          <p>Track your current meals and past delights.</p>
        </div>

        <div class="orders-container">
          <% Orders.forEach(order => { %>
          <div class="order-card">
            <div class="oc-header">
              <div>
                <h2 class="meal-title"><%= order.meal_name %></h2>
                <span class="order-id">#<%= order.id %></span>
              </div>
              <div class="price-tag">R<%= order.amount %></div>
            </div>

            <div class="oc-body">
              <div class="info-row">
                <span class="label">Quantity</span>
                <span class="value">x<%= order.quantity %></span>
              </div>

              <% if(order.payment_status == "COMPLETE") { %>
              <div class="info-row">
                <span class="label">Subtotal</span>
                <span class="value">R<%= order.subtotal %></span>
              </div>

              <div class="status-container">
                <% if(order.order_status == "PAID") { %>
                <div class="status-badge paid">
                  <i class="fas fa-receipt"></i> Paid â€¢ Waiting for Store
                </div>
                <div class="pin-box">
                  <h1><%= order.user_code %></h1>
                  <p>
                    ðŸ”’ Keep this code safe! You will need it to collect your
                    meal.
                  </p>
                </div>

                <% } else if(order.order_status == "ACCEPTED") { %>
                <div class="status-badge accepted">
                  <i class="fas fa-fire"></i> Preparing
                </div>
                <p style="font-size: 0.9rem; margin-bottom: 1rem">
                  Estimated time:
                  <strong
                    ><%= order.TimeFrom %> - <%= order.TimeTo %> mins</strong
                  >
                </p>
                <div class="pin-box">
                  <h1><%= order.user_code %></h1>

                  <p>Show this code when collecting.</p>
                </div>

                <% } else if(order.order_status == "READY") { %>
                <div class="status-badge ready">
                  <i class="fas fa-check-circle"></i> Ready for Collection
                </div>
                <div
                  class="pin-box"
                  style="border-color: var(--success); background: #ecfdf5"
                >
                  <h1 style="color: var(--success)"><%= order.user_code %></h1>
                  <p>Show this code to the driver when they arrive</p>
                </div>

                 
                <% }else if(order.order_status == "COLLECTED_BY_DRIVER") { %>
                <div class="status-container" style="border: 2px solid var(--primary);">
    <div class="pulse-delivery" style="width: 60px; height: 60px; background: var(--primary-light); display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
      <i class="fas fa-motorcycle" style="color: var(--primary); font-size: 1.5rem;"></i>
    </div>
    <h2 style="font-size: 1.1rem; color: var(--dark)">Our Driver is on the way!</h2>
    <p><b>Estimated Arrival:</b> <span id="estimated" class="value" style="color: var(--primary)">Calculating...</span></p>
    
    <div class="pin-box">
      <h1 style="font-size: 2.5rem;"><%= order.user_code %></h1>
      <p>Give this code to the driver to receive your meal.</p>
    </div>
                  <% } else if(order.order_status == "ARRIVED") { %>
    <div class="status-container arrived-alert">
        <div style="font-size: 2rem; margin-bottom: 0.5rem;">ðŸšš</div>
        <h2 style="color: var(--primary); font-weight: 800;">The Driver is Outside!</h2>
        <p style="font-size: 0.9rem; margin-bottom: 1rem;">Please meet the driver at the door.</p>
        
        <div class="pin-box" style="background: var(--white);">
            <h1 style="font-size: 3rem; margin: 0;"><%= order.user_code %></h1>
            <p style="font-weight: 700; color: var(--dark);">SHARE THIS PIN TO COLLECT</p>
        </div>

        <div style="margin-top: 1.5rem; padding-top: 1rem; border-top: 1px dashed var(--border);">
            <p style="font-size: 0.85rem; color: var(--gray);">
                <i class="fa-regular fa-clock"></i> 
                <b>Waiting time remaining:</b> 
                <span id="countdown-<%= order.id %>">05:00</span>
            </p>
        </div>
    </div>
<% }else if(order.order_status == "DELIVERED") { %>
                <div
                  class="status-badge"
                  style="background: var(--dark); color: white"
                >
                  <i class="fas fa-utensils"></i> Enjoy your meal
                </div>
                <% if(order.feedback_status=="no"){%>

                <div class="feedback-section">
                  <p
                    style="
                      font-size: 0.85rem;
                      font-weight: 600;
                      text-align: center;
                    "
                  >
                    How was your experience?
                  </p>

                  <% if(order.rated=="no"){%>
                  <div class="rating-stars" data-order-id="<%= order.id %>">
                    <i
                      class="fas fa-star rate"
                      data-value="1"
                      data-mealid="<%= order.meal_id %>"
                    ></i>
                    <i
                      class="fas fa-star rate"
                      data-value="2"
                      data-mealid="<%= order.meal_id %>"
                    ></i>
                    <i
                      class="fas fa-star rate"
                      data-value="3"
                      data-mealid="<%= order.meal_id %>"
                    ></i>
                    <i
                      class="fas fa-star rate"
                      data-value="4"
                      data-mealid="<%= order.meal_id %>"
                    ></i>
                    <i
                      class="fas fa-star rate"
                      data-value="5"
                      data-mealid="<%= order.meal_id %>"
                    ></i>
                  </div>
                  <%} %>

                  <select class="feedback-type">
                    <option value="">Select...</option>
                    <option value="feedback">General Feedback</option>
                    <option value="suggestion">Suggestion</option>
                    <option value="report">Report an Issue</option>
                  </select>

                  <textarea
                    class="feedback-text"
                    placeholder="Write a quick note..."
                    rows="4"
                  ></textarea>

                  <h5>Word Count: <span class="word-count">0</span>/250</h5>
                  <br />
                  <p class="error-msg" style="color: red"></p>

                  <button
                    class="btn btn-primary submit-feedback"
                    data-meal-id="<%= order.meal_id %>"
                    data-order-id="<%= order.id %>"
                  >
                    Submit Review
                  </button>
                </div>
                <%} %> <% } else if(order.order_status == "CANCELED") { %>
                <div
                  class="status-badge"
                  style="background: #fee2e2; color: #b91c1c"
                >
                  <i class="fas fa-times-circle"></i> Canceled
                </div>
                <p style="font-size: 0.9rem; margin-top: 0.5rem">
                  Don't stay hungry.
                </p>
                <button class="btn btn-primary">Try Again</button>
                <% } %>
              </div>

              <% } else if(order.payment_status == "PENDING") { %>
              <div
                class="status-container"
                style="background: white; padding: 0"
              >
                <div class="status-badge pending">
                  <i class="fas fa-hourglass-half"></i> Payment Pending
                </div>
                <p
                  style="
                    color: var(--gray);
                    font-size: 0.9rem;
                    margin-bottom: 1rem;
                  "
                >
                  Complete checkout to start your order.
                </p>
                <button class="btn btn-primary">Continue to Checkout</button>
              </div>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="cart-overlay" id="cartOverlay" onclick="toggleCart()"></div>
        <a href="javascript:void(0)" class="nav-item" onclick="toggleCart()">
          <i class="fas fa-shopping-cart"></i> Cart
          <span
            id="cart-badge"
            style="
              background: var(--primary);
              color: white;
              border-radius: 50%;
              padding: 2px 6px;
              font-size: 0.7rem;
            "
            >0</span
          >
        </a>

        <div class="cart-drawer" id="cartDrawer">
          <div class="cart-header">
            <h2 style="font-size: 1.5rem">Your Cart</h2>
            <button onclick="toggleCart()">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
              >
                <path d="M18 6L6 18" />
                <path d="M6 6l12 12" />
              </svg>
            </button>
          </div>

          <div class="cart-items" id="cartItems">
            <div class="empty-cart-msg">
              Your cart is empty. <br />Start adding some yummy food!
            </div>
          </div>
          <div id="Promo"></div>

          <div class="cart-footer" id="cart-footer">
            <div class="cart-total-row">
              <span>Subtotal</span>
              <span id="cartSubtotal">R0.00</span>
            </div>
            <div class="cart-total-row"></div>
            <div class="cart-total-row final">
              <span>Total</span>
              <span id="cartTotal">R20.00</span>
            </div>
            <button class="checkout-btn" id="checkout-btn">Checkout</button>
          </div>
        </div>
        <button id="openChat"><i class="fa-regular fa-message"></i> Chat with driver</button>
       <div id="sidebarOverlay" class="sidebar-overlay"></div>

        <div id="chatSidebar" class="chat-sidebar">
      <div class="chat-header">
        <button id="closeChat" style="background:none; border:none; color:white; font-size:1.8rem; cursor:pointer;">&times;</button>
      </div>

  <div id="messageContainer" class="chat-messages">
    <% if(chats.length == 0){ %>
      <div id="no-chat" style="text-align:center; color:#94a3b8; margin-top:20px;">No messages yet.</div>
    <% } else { %>
      <% chats.forEach(chat => { %>
        <p class="<%= chat.message_by %>"><%= chat.chat_value %></p>
      <% }) %>
    <% } %>
  </div>
  <div class="chat-input-area" style="padding: 15px; border-top: 1px solid #e2e8f0;">
    <textarea id="chatInput" style="width:100%; border-radius:8px; padding:10px; border:1px solid #cbd5e1; resize:none;" placeholder="Type a message..."></textarea>
    <button id="sendChat" orderId="" style="width:100%; background:#e11d48; color:white; border:none; padding:12px; border-radius:8px; margin-top:8px; font-weight:600;" disabled>Send Message</button>
  </div>
</div>
      </main>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/userchat.js"></script>
