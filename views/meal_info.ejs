<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= Meals.meal_name %> | DinesNDash</title>
    <script>
        // Data passed from server
        let Images = <%- JSON.stringify(images) -%>;
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #e11d48;
            --primary-hover: #be123c;
            --primary-light: #fff1f2;
            --dark: #111827;
            --gray: #6b7280;
            --light-gray: #f3f4f6;
            --white: #ffffff;
            --radius: 1.5rem;
            --shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: "Plus Jakarta Sans", sans-serif;
            background-color: var(--light-gray);
            color: var(--dark);
        }

        .app-container { display: flex; min-height: 100vh; }

        /* --- SIDEBAR --- */
        .sidebar {
            width: 260px;
            background: var(--white);
            border-right: 1px solid #eee;
            position: fixed;
            height: 100vh;
            padding: 2rem;
            z-index: 100;
        }

        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: 2rem;
            display: flex;
            justify-content: center;
        }

        /* --- MEAL LAYOUT --- */
        .meal-detail-wrapper {
            max-width: 1100px;
            width: 100%;
            display: grid;
            grid-template-columns: 1.2fr 0.8fr;
            gap: 2.5rem;
            margin-top: 1rem;
        }

        /* --- CAROUSEL STYLES --- */
        .carousel-container {
            width: 100%;
            height: 450px;
            position: relative;
            border-radius: 1.25rem;
            overflow: hidden;
            margin-bottom: 2rem;
            background: #e5e7eb;
            box-shadow: var(--shadow);
        }

        .carousel-track {
            display: flex;
            height: 100%;
            transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .carousel-slide {
            min-width: 100%;
            height: 100%;
        }

        .carousel-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .carousel-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.9);
            border: none;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--dark);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: 0.2s;
            z-index: 10;
        }

        .carousel-btn:hover { background: var(--white); color: var(--primary); }
        .prev-btn { left: 1rem; }
        .next-btn { right: 1rem; }

        .carousel-dots {
            position: absolute;
            bottom: 1rem;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 0.5rem;
            z-index: 10;
        }

        .dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            cursor: pointer;
            transition: 0.3s;
        }

        .dot.active { background: var(--white); width: 24px; border-radius: 10px; }

        /* --- REST OF STYLES --- */
        .meal-visuals { background: var(--white); border-radius: var(--radius); padding: 1.5rem; box-shadow: var(--shadow); }
        .meal-header h1 { font-size: 2.5rem; font-weight: 800; margin-bottom: 0.5rem; }
        .store-tag { display: inline-flex; align-items: center; gap: 0.5rem; color: var(--gray); font-weight: 600; margin-bottom: 2rem; }
        .section-title { font-size: 1.2rem; font-weight: 700; margin-bottom: 1rem; display: flex; align-items: center; gap: 0.5rem; }
        .ingredients-grid { display: flex; flex-wrap: wrap; gap: 0.75rem; list-style: none; }
        .ingredient-chip { background: var(--light-gray); padding: 0.6rem 1.2rem; border-radius: 99px; font-size: 0.9rem; font-weight: 600; color: var(--dark); border: 1px solid #e5e7eb; }
        
        /* Order Card */
        .order-card { background: var(--white); border-radius: var(--radius); padding: 2rem; box-shadow: var(--shadow); height: fit-content; position: sticky; top: 2rem; }
        .price-display { font-size: 2rem; font-weight: 800; color: var(--primary); margin-bottom: 1.5rem; }
        .info-item { display: flex; justify-content: space-between; padding: 1rem 0; border-top: 1px solid var(--light-gray); }
        .qty-selector { display: flex; align-items: center; justify-content: space-between; background: var(--light-gray); padding: 0.5rem; border-radius: 1rem; margin: 1.5rem 0; }
        .qty-btn { width: 40px; height: 40px; border-radius: 0.75rem; background: var(--white); border: none; font-weight: bold; cursor: pointer; }
        
        #AddToCart { width: 100%; background: var(--dark); color: white; padding: 1.2rem; border-radius: 1rem; font-size: 1.1rem; font-weight: 700; border: none; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.75rem; transition: 0.3s; }
        #AddToCart:hover { background: var(--primary); transform: translateY(-3px); box-shadow: 0 10px 20px rgba(225, 29, 72, 0.2); }
        #AddToCart.in-cart { background: #10b981; }
        #AddToCart.in-cart:hover { background: #0da271; }

        #toast { 
            position: fixed; 
            bottom: 2rem; 
            right: 2rem; 
            background: var(--dark); 
            color: white; 
            padding: 1rem 2rem; 
            border-radius: 1rem; 
            display: none; 
            z-index: 1000;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @media (max-width: 900px) {
            .meal-detail-wrapper { grid-template-columns: 1fr; }
            .sidebar { display: none; }
            .main-content { margin-left: 0; }
        }
    </style>
</head>
<body>

<div class="app-container">
    <aside class="sidebar">
        <div class="logo">Dines<span style="color: var(--primary)">N</span>Dash</div>
        <nav>
            <a href="/menu" style="text-decoration: none; color: var(--gray); font-weight: 600; display: block; padding: 1rem;">
                <i class="fas fa-arrow-left"></i> Back to Menu
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <div class="meal-detail-wrapper">
            
            <div class="meal-visuals">
                <div class="carousel-container" id="carousel">
                    <div class="carousel-track" id="track">
                        </div>
                    
                    <button class="carousel-btn prev-btn" id="prevBtn"><i class="fas fa-chevron-left"></i></button>
                    <button class="carousel-btn next-btn" id="nextBtn"><i class="fas fa-chevron-right"></i></button>
                    
                    <div class="carousel-dots" id="dots"></div>
                </div>

                <div class="meal-header">
                    <h1><%= Meals.meal_name %></h1>
                    <a href="/store/<%= Meals.store_id %>" class="store-tag"><i class="fas fa-store"></i> By <%= Meals.storename %></a>
                </div>

                <div class="section">
                    <h2 class="section-title"><i class="fas fa-leaf"></i> Ingredients</h2>
                    <ul class="ingredients-grid">
                        <% Ingredients.forEach(ingredient => { %>
                            <li class="ingredient-chip"><%= ingredient %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>

            <div class="order-card">
                <div class="price-display">R <%= Meals.SellingPrice %></div>
                <div class="info-item">
                    <span style="color: var(--gray)">Preparation Time</span>
                    <span style="font-weight: 700;"><%= Meals.TimeFrom %> - <%= Meals.TimeTo %> Mins</span>
                </div>

                <div class="qty-selector">
                    <button class="qty-btn" id="minus">-</button>
                    <span id="qty-count" style="font-weight: 800; font-size: 1.2rem;">1</span>
                    <button class="qty-btn" id="plus">+</button>
                </div>

                <button id="AddToCart" 
                        meal_id="<%= Meals.meal_id %>" 
                        meal_name="<%= Meals.meal_name %>" 
                        store_id="<%= Meals.store_id %>"
                        meal_price="<%= Meals.SellingPrice %>" 
                        storename="<%= Meals.storename %>">
                    
                    <i class="fas fa-shopping-basket"></i> <span id="cart-btn-text">Add To Cart</span>
                </button>
            </div>
        </div>
    </main>
</div>

<div id="toast">Added to cart! üçî</div>

<script>
    /* --- CAROUSEL LOGIC --- */
    const track = document.getElementById('track');
    const dotsContainer = document.getElementById('dots');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    
    let currentIndex = 0;

    function initCarousel() {
        if (!Images || Images.length === 0) {
            track.innerHTML = `<div class="carousel-slide"><img src="https://via.placeholder.com/600x450?text=No+Image+Available" alt="placeholder"></div>`;
            prevBtn.style.display = 'none';
            nextBtn.style.display = 'none';
            return;
        }

        // Render images
        Images.forEach((imgSrc, index) => {
            const slide = document.createElement('div');
            slide.className = 'carousel-slide';
            slide.innerHTML = `<img src="/${imgSrc}" alt="Meal Image ${index + 1}">`;
            track.appendChild(slide);

            const dot = document.createElement('div');
            dot.className = `dot ${index === 0 ? 'active' : ''}`;
            dot.addEventListener('click', () => goToSlide(index));
            dotsContainer.appendChild(dot);
        });

        // Hide controls if only 1 image
        if (Images.length === 1) {
            prevBtn.style.display = 'none';
            nextBtn.style.display = 'none';
            dotsContainer.style.display = 'none';
        }
    }

    function goToSlide(index) {
        currentIndex = index;
        track.style.transform = `translateX(-${index * 100}%)`;
        
        // Update dots
        document.querySelectorAll('.dot').forEach((dot, i) => {
            dot.classList.toggle('active', i === index);
        });
    }

    nextBtn.onclick = () => {
        currentIndex = (currentIndex + 1) % Images.length;
        goToSlide(currentIndex);
    };

    prevBtn.onclick = () => {
        currentIndex = (currentIndex - 1 + Images.length) % Images.length;
        goToSlide(currentIndex);
    };

    // Auto-play
    let autoPlay = setInterval(() => {
        if(Images.length > 1) nextBtn.onclick();
    }, 5000);

    document.getElementById('carousel').onmouseenter = () => clearInterval(autoPlay);

    initCarousel();

    /* --- CART LOGIC --- */
    let qty = 1;
    const qtyDisplay = document.getElementById("qty-count");
    const toast = document.getElementById("toast");
    const addToCartBtn = document.getElementById("AddToCart");
    const cartBtnText = document.getElementById("cart-btn-text");

    // Check if item is already in cart on page load
    function checkIfInCart() {
        const mealId = addToCartBtn.getAttribute("meal_id");
        let cart = JSON.parse(localStorage.getItem("Cart")) || [];
        const existingItem = cart.find(item => item.meal_id == mealId);
        
        if (existingItem) {
            addToCartBtn.classList.add("in-cart");
            addToCartBtn.disabled = true;
            cartBtnText.textContent = `In Cart (${existingItem.qty})`;
        }
    }

    // Check cart status on page load
    checkIfInCart();

    document.getElementById("plus").onclick = () => { 
        qty++; 
        qtyDisplay.innerText = qty; 
    };
    
    document.getElementById("minus").onclick = () => { 
        if (qty > 1) { 
            qty--; 
            qtyDisplay.innerText = qty; 
        } 
    };

    addToCartBtn.onclick = function() {
        let cart = JSON.parse(localStorage.getItem("Cart")) || [];
        const mealId = this.getAttribute("meal_id");
        const mealName = this.getAttribute("meal_name");
        const mealPrice = this.getAttribute("meal_price");
        const storename = this.getAttribute("storename");
        const store_id=this.getAttribute("store_id");
        
        const existingItem = cart.find(item => item.meal_id == mealId);
        if (existingItem) {
            existingItem.qty += qty;
        } else {
            cart.push({
                meal_id: mealId,
                meal_name: mealName,
                SellingPrice: parseFloat(mealPrice),
                Images: Images,
                storename: storename,
                id:store_id,
                qty: qty
            });
        }

        // Save to localStorage
        localStorage.setItem("Cart", JSON.stringify(cart));
        
        // Update button state
        this.classList.add("in-cart");
        this.disabled = true;
        cartBtnText.textContent = `In Cart (${existingItem ? existingItem.qty + qty : qty})`;
        
        // Show toast notification
        toast.textContent = `${mealName} added to cart! üçî`;
        toast.style.display = "block";
        setTimeout(() => { 
            toast.style.display = "none"; 
        }, 3000);
        
        // Reset quantity
        qty = 1; 
        qtyDisplay.innerText = qty;
    };
</script>

</body>
</html>